roomenter {"";
  bow %n;
}

package {"1";
  say Greetings traveler.;
  say May you find peace and wisdom before your journeys end.;
}

say {"peace";
  say Easy to contemplate.  Difficult to adopt.;
}

say {"wisdom";
  say Use what you've got before you lose it.;
}

say {"hello";
  link package 1;
}

say {"hi";
  link package 1;
}
