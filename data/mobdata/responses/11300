roomenter {"";
            checktoggle 182;
            checkuntoggle 183;
            checkuntoggle 184;
            load 11300;
            toroom $n picks up a corpse from one of his benches.;
            toroom $n examines the corpse closely.;
            frown;
            toroom $n suddenly notices your presence.;
            arch;
            toroom $n makes a small gesture with his hand.;
            close door;
            say I do think you have made a mistake.;
            say I do so hate those who disturb my work.;
            growl %n;
            say Shall we begin?;
}

roomenter {"";
            checktoggle 182;
            checktoggle 183;
            toroom $n looks you over.;
            say You are not worth my effort.;
            say You have failed in your task.;
            toroom $n returns to his work.;
}

