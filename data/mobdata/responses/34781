say { "hello";              
             smile %n;                
             say "Greetings traveler, I can see you've got a lot wrong with you.";
             peer %n;
	 nod %n;
             say "Is that why you've come?";
             }

say { "come";
	say "Ah, yes.  No need to be embarrassed.";
	comfort %n;
	say "It's alright to be different.  The rest here are different, too.";
	Say "I protect these outcasts from the magic of the outside.";
	Say "To be different is to be special..";
	Say "..and I can see that you are very special.";
	Ruffle %n;
	}

Say { "magic";
	Say "The outside world can be cruel..";
	Say "I provide protection to those inside..";
	Say "No one uses magic to get in or out.";
	Chortle;
	Tell  %n "Though, I must admit, these freaks are starting to get to me!";
	Moan;
	}

Say { "freaks";
	Say "The lot of them, they're off their rockers..";
	Boggle;
	Say "Oh, I'm sorry.  I didn't mean to say that you're a freak.";
	Apologize %n;
	Chortle;
	}

Say { "dorgim";
	Say "That one? Man, that one!";
	Say "I made him stay outside, he kept puking all over the cave!";
	Giggle;
	Say "What a loser.";
	Snicker;
	}

Say { "wegort";
	Laugh;
	Say "Such an absurd thing!  An ogre faerie?.";
	Say "He really needs some professional help.";
	Say "I've asked him to see the Grimhaven Doctor, you know?";
	Say "He tries to fly there!";
Say "Can you imagine?  A flying ogre?";
	Laugh;
	}

Say { "Klancy";
	say "I've lost more spellbags to him..";
	grumble;
	}

Say { "prisca";
	Say "Now, I will not talk about her.  Shame on you!";
	Wink %n;
Chuckle;
	}

Say { "primula";
	Say "Shh.";
	Glare %n;
Say "Ohh, alright!  Twist my arm, don't you!";
	Say "Ogre with furry feet?!";
	Cackle;
	Say "Now, that wasn't very nice of me, was it?!";
	Chuckle;
	}

Say { "jane";
	Gasp;
	Say "Pipeweed!";
	Say "In THIS cave?!";
	Roll;
	}

Say { "gnara";
	Snort %n;
	Say "I bet you want the goods on her!";
	Nudge %n;
	Say "You'll have to beat Feanis to it.";
	}

Say { "feanis";
	Groan;	
	Say "Feanis the peni..";
	Blush;	
	Say "..er, pervert, is what I call him!";
	Cough;
	}

Say { "gnewell";
	Say "Good Eldric, you just had to say that name?";
	Glare %n;
	Say "I swore to take him in, help him out..";
	Sigh;
	Say "..it was part of my internship for The Circle.";
	Snarl;
	Say "Ahem. Anyway.";
	Spam %n;
	Say "Annoys the hell out of me, makes my ears bleed!";
	Say "There, I said it!";
	}

Say { "bruthed";
	Say "Oh brother.";
	Say "Can you believe that weirdo?";
	Roll;	
	Say "I told him to rub offal..";
	Laugh;
	Say "..on his chin..";
	Laugh;
	Say "..to grow beard hair!";
	Laugh;
	Say "Such a PUTZ.";
	Cough;	
	}

Say { "baulder";
	Say "Gnoll.";
	Whistle;
	Say "Need I say more?";	
	Shrug;
	}

Say { "gnatalie";
	Say "Are you insane?";
	Peer %n;
	Say "Go away, kid.  You're bothering me.";
	Growl %n;
	}

Say { "zombie faerie";
