Say { "Primula";
	Beam;
	Say "Wegort fancies Primula..";
	toroom $ngrins stupidly.;
	}

Say { "Prisca";
	Frown;
	Say "Prisca mean..";
	Say "..bad hobbits!";
	Snort %n;
	}

Say { "faeries";
	Say "Where?";
	Peer;
	Say "Wegort need skin!";
	}

Say { "pixies";
	Grunt;
	Say "Shake them!  Make sparkles!";
	Clap;
	}

Say { "ogre";
	Say "Where?!";
	accuse %n;
	Say "Wegort faerie!";
	toroom $nflutters around, skipping and waving his arms in circles.;
	}

Say { "pixie torch";
	Say "Smoosh pixie torch, make faerie fire!";
	Clap;
	Say "Ho. Ho. Hehe. Hehe.";
	Clap;
	}

Give { "227";
	Frown pixie-torch;
	Love pixie-torch;
	Say "OH, NO!";
	Growl %n;
	}


