# butler to the apartments in the usurped faction mansion
# created by Metrohep


# galek suite
say { "me pipe";
	checkroom 26879;
	load 26893;
	give ivory-pipe %n;
	toroom $n emits a piercing screech.;
}

say { "hit me";
	checkroom 26879;
	grin %n;
	load 19002;
	give death-card %n;
	toroom $n slowly draws a finger along its neck.;
}


