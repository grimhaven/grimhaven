# Grenoshan Chieftess
# Star Key Quest -- summoning stone
# Created by Omen
# Copyright 1998, SneezyMUD Development Team.  All rights reserved.

roomenter  { "";
       tovict $n looks startled at your entrance.;
       }

say  { "amoper";
       ponder;
       say Besso shelplo. Ta amo shelplo.;
     }

say  { "besso shelplo";
       say Amo shelplo, adda grenoshan.;
     }

say  { "adda";
       nod %n;
       smile %n;
     }

say  { "ta amo shelplo";
       shake;
       say Ta!;
       point %n;
     }

give { "27724";
       smile;
       say Bo sinna, adda Grenoshan!;
       toroom $n pulls a rattle from her belt and shakes it vigorously.;
       toroom A villager enters the hut.;
       say Amo amoper.;
       toroom The villager runs quickly from the hut and returns shortly.;
       toroom The villager hands a stone to the chieftess.;
       load 27506;
       give stone %n;
       thank %n;
     }

say  { "star";
        toroom $n looks confused.;
     }

say  { "pyramid";
        frown;
        toroom $n looks confused.;
     }

say  { "sphere";
        toroom $n looks confused.;
     }

say  { "understand";
        toroom $n crinkles $m brow in confusion.;
     }
