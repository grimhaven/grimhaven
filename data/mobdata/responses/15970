pulse { "";
        random 6;
        randoption 1;
	  scratch head;
        randoption 2;
	  drool;
        randoption 3;
        randoption 4;
        randoption 5;
        randoption 6;
        donerand;
      }


say { "research";
      frown;
      tell %n Old man come to village and say sword not as good as pen.;
      tell %n So Chief send Krug look for pen.  Krug can read.;
      tell %n So far, only find book with funny story.;
    }
