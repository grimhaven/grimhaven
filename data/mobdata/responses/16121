say { "hello";
	say Don't ya be a wasting me time chump!;
	say State yer business or move along.;
	toroom $n spins a steel key around $s index finger.;
 	}

say {"key";
        say Need a key to unlock the gate.;
        grin;
        say But without a pass I can't give you a key.;
        say Now stop wasting my time!;
}

say {"gate";
        link say key;
}

give { "16120";
	toroom $n glances over the papers uncomfortably.;
	say Ahh...looks valid to me...hold on a sec.;
	toroom $n looks at the pass and nods.;
	load 16121;
	give key %n;
	say There ya go, move along now.;
	}

