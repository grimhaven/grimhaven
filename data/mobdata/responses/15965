pulse { "";
        random 9;
        randoption 1;
           grumble;
        randoption 2;
           growl;
        randoption 3;
        randoption 4;
        randoption 5;
        randoption 6;
        randoption 7;
        randoption 8;
        randoption 9;
        donerand;
      }

say { "hello";
      sigh;
      tell %n Aye, un wh't de ye wunt?  I've no stowmuck feh idle towke.;
    }


say { "burdok sent me";
      tell %n Oh so 'e deed, deed he?  Weel, theer's no use now.;
      tell %n I canna' find tha note 'e left me.;
      tell %n T'was een tha courtyard last I sawr et.;
      tell %n If ye find et teel me wha' et says.;
    }
say { "burdok sent you";
      link say burdok sent me;
    }

say { "twist arm off";
      bonk willon-groundskeeper;
      tell %n Augh!  That's wha' et said.  I ruhmembah now.;
      tell %n Weel, canna' ye get et for me?  I dunna wont'ta get caught.;
      tell %n Joost heed to tha meetun pleese, an 'twist arm off'.;
    }
say { "twist the arm off";
      link say twist arm off;
    }
say { "twist off";
      link say twist arm off;
    }
say { "Lord Logrus";
      link say twist arm off;
    }

say { "taking so long";
      tell %n Wha'?!?  I dunna knew wha' ye mean.;
    }
say { "taking you so long";
      link say taking so long;
    }
say { "what is taking";
      link say taking so long;
    }

say { "meetun pleese";
      tell %n Ye dunna knew whur tha meetun pleese's?  Augh!  Look alrooownd 'n tha bealdun', ye spineluss gewn!;
    }
say { "meeting place";
      link say meetun pleese;
    }


give { "15969";
       tell %n Weel, now that I ha' me pay, I dunna thunk I can do et.;
       tell %n S'not be right, aye guv thus back to tha weasul an teel 'im 'e can kiss me arse.;
       give packet-white-powder %n;
     }
